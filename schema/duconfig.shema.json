{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/duconfig.schema.json",
  "title": "Duconfig",
  "description": "User's personal application settings. Corresponds to a .duconfig file (file_identifier 'DFIG').",
  "type": "object",
  "$ref": "#/$defs/Duconfig",

  "$defs": {
    "THEME": {
      "type": "string",
      "description": "UI color theme.",
      "enum": ["LIGHT", "DARK"]
    },
    "ANTI_ALIASING": {
      "type": "string",
      "description": "Graphics anti-aliasing level.",
      "enum": ["MSAA_8", "MSAA_16", "NONE", "ANALYTIC"]
    },
    "SHOW_HYPERLINK_POPUP": {
      "type": "string",
      "description": "Controls when to show a popup for hyperlinks.",
      "enum": ["NONE", "INFO", "EDITOR"]
    },
    "PRUNING_LEVEL": {
      "type": "string",
      "description": "Aggressiveness of version graph pruning.",
      "enum": ["CONSERVATIVE", "BALANCED", "AGGRESSIVE"]
    },
    "Duconfig": {
      "type": "object",
      "properties": {
        "theme": {
          "$ref": "#/$defs/THEME",
          "default": "LIGHT"
        },
        "anti_aliasing": {
          "$ref": "#/$defs/ANTI_ALIASING",
          "default": "ANALYTIC"
        },
        "show_hyperlink_popup": {
          "$ref": "#/$defs/SHOW_HYPERLINK_POPUP",
          "default": "INFO"
        },
        "zoom_step": {
          "type": "number",
          "description": "The incremental step for zooming."
        },
        "v_sync": {
          "type": "boolean"
        },
        "scale_ratio_locked": {
          "type": "boolean"
        },
        "display_all_point_distances": {
          "type": "boolean"
        },
        "display_distance_on_drawing": {
          "type": "boolean"
        },
        "display_all_point_coordinates": {
          "type": "boolean"
        },
        "display_all_point_info_selected": {
          "type": "boolean"
        },
        "display_root_axis": {
          "type": "boolean"
        },
        "debug_rendering": {
          "type": "boolean"
        },
        "manual_save_mode": {
          "type": "boolean"
        },
        "default_version_graph_pruning_level": {
          "$ref": "#/$defs/PRUNING_LEVEL",
          "default": "BALANCED"
        }
      },
      "required": [
        "zoom_step",
        "v_sync",
        "scale_ratio_locked",
        "display_all_point_distances",
        "display_distance_on_drawing",
        "display_all_point_coordinates",
        "display_all_point_info_selected",
        "display_root_axis",
        "debug_rendering",
        "manual_save_mode"
      ],
      "additionalProperties": false
    }
  }
}
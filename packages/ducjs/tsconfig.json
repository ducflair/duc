{
  "extends": "@duc/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "paths": {
      "ducjs/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "composite": false,
    "rootDir": "src",
    "paths": {
      "ducsvg/*": [
        "./src/*"
      ],
      "ducpdf/*": [
        "../../packages/ducpdf/src/*"
      ],
      "ducjs/*": [
        "../../packages/ducjs/src/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
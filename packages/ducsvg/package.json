{
  "name": "ducsvg",
  "version": "0.0.0-development",
  "description": "Adapter for converting duc CAD documents to SVG. Built on top of ducjs.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": ["./dist/*.js", "./dist/*/index.js"],
      "require": ["./dist/*.js", "./dist/*/index.js"],
      "types": ["./dist/*.d.ts", "./dist/*/index.d.ts"]
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "vite build && pwd && tsc --project ./tsconfig.json",
    "check-types": "tsc --noEmit",
    "test": "bun test",
    "semantic-release": "semantic-release"
  },
  "author": "Ducflair",
  "license": "MIT",
  "dependencies": {
    "ducjs": "workspace:*",
    "ducpdf": "workspace:*",
    "pdf-into-svg": "1.0.1"
  },
  "devDependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "happy-dom": "^20.0.5",
    "semantic-release": "^24.1.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "files": ["dist", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ducflair/duc.git",
    "directory": "packages/ducsvg"
  },
  "homepage": "https://duc.ducflair.com/",
  "bugs": {
    "url": "https://github.com/ducflair/duc/issues"
  },
  "keywords": ["CAD", "2D", "Design", "TypeScript", "Ducflair", "Duc", "SVG", "Renderer", "Converter", "Export"]
}
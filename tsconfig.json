{
  "extends": "@duc/tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@duc/tsconfig/*": ["packages/tsconfig/*"],
      "ducjs": ["packages/ducjs/*"],
      "ducsvg": ["packages/ducsvg/*"],
      "ducpdf": ["packages/ducpdf/*"],
    },
  },
  "files": [],
  "references": [
    { "path": "packages/ducjs" },
    { "path": "packages/ducsvg" },
    { "path": "packages/ducpdf" },
  ]
} 
{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "ducjs#build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },
    "ducpy#build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },
    "ducrs#build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },
    "ducsvg#build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },
    "semantic-release": {
      "dependsOn": ["build"],
      "outputs": []
    },

    "ducpy#gen:docs": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },

    "@duc/docs#build": {
      "env": [
        "NEXT_PUBLIC_*",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.*",
        ".env.local",
        ".env.production.local"
      ]
    },
    

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "src/index.js", "target/**", "*.egg-info/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env.*", ".env.local"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "install-deps": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_*"]
    }
  }
}